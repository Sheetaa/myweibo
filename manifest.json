{
  "manifest_version": 2,

  "name": "超凡微博",
  "description": "This extension demonstrates personal Weibo content",
  "version": "1.0",

  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "images/weibo.png",
    "default_title": "超凡微博",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "background",
    "contextMenus",
    "notifications",
    "tabs",
    "https://*.weibo.com/*"
  ]
}
